            <StackLayout Orientation="Horizontal"
                         Spacing="10"
                         HorizontalOptions="End">





                <Label Text="前回比　体重(kg)" 
                       FontSize="Medium"
                       WidthRequest="130"/>

                <Entry x:Name="GBWeight"
                       WidthRequest="130"
                       Text="             "/>

                <Label Text="体脂肪(%)"
                       FontSize="Medium"
                       WidthRequest="130"/>

                <Entry x:Name="GBfat"
                       WidthRequest="130"
                       Text="             "/>


            </StackLayout>

            <StackLayout Orientation="Vertical"
                     Spacing="10" >


                <Label Text="日付" 
                       FontSize="Medium"/>

                <DatePicker 
                            x:Name="eCreated" 
                             Format = "yyyy/MM/dd"
                            WidthRequest="250"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Margin="30"/>

            </StackLayout>


            <StackLayout Orientation="Vertical"
                     Spacing="10" >


                <Label Text="体重(kg)"
                       FontSize="Medium"/>

                <Entry x:Name="bWeight" Placeholder="体重を入力してください" Text="0"
                       
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="30"/>

            </StackLayout>


            <StackLayout Orientation="Vertical"
                     Spacing="10" >

                <Label Text="体脂肪(%)"
                       FontSize="Medium"/>

                <Entry x:Name="bFat" Placeholder="体脂肪を入力してください" Text="0" WidthRequest="200"
                       
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="30"/>

                <Button Text="保存" x:Name="addItemButton"
                Clicked="Handle_Clicked" />

            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>